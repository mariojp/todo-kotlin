<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ListToDoActivity">

    <TextView
        android:id="@+id/activity_list_todo_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_list_todo_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/title"
        app:layout_constraintEnd_toEndOf="@+id/activity_list_todo_id"
        app:layout_constraintStart_toStartOf="@+id/activity_list_todo_id"
        app:layout_constraintTop_toBottomOf="@+id/activity_list_todo_id" />

    <TextView
        android:id="@+id/activity_list_todo_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/description"
        app:layout_constraintEnd_toEndOf="@+id/activity_list_todo_title"
        app:layout_constraintStart_toStartOf="@+id/activity_list_todo_title"
        app:layout_constraintTop_toBottomOf="@+id/activity_list_todo_title" />

</androidx.constraintlayout.widget.ConstraintLayout>